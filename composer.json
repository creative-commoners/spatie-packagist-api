{
    "name": "spatie/packagist-api",
    "description": "Fetch package info from Packagist",
    "keywords": [
        "spatie",
        "packagist",
        "api"
    ],
    "homepage": "https://github.com/spatie/packagist-api",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        },
        {
            "name": "Jolita Grazyte",
            "email": "jolita@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        },
        {
            "name": "Mark Walet",
            "homepage": "https://markwalet.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "^7.2|^8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle":"^6.5|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\Packagist\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\Packagist\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    }
}
